  AR = ar
endif

ifndef RESCOMP
  ifdef WINDRES
    RESCOMP = $(WINDRES)
  else
    RESCOMP = windres
  endif
endif

ifeq ($(config),debug)
  OBJDIR     = obj/Debug
  TARGETDIR  = .
  TARGET     = $(TARGETDIR)/ntoskrnl.exe
  DEFINES   += -D_CRT_SECURE_NO_WARNINGS -DDEBUG
  INCLUDES  += -I../../include -I. -I..
  CPPFLAGS  += -MMD -MP $(DEFINES) $(INCLUDES)
  CFLAGS    += $(CPPFLAGS) $(ARCH) -g -fomit-frame-pointer -fno-builtin -nostdinc
  CXXFLAGS  += $(CFLAGS) 
  LDFLAGS   += -nostdlib -shared -Wl,--image-base,0x400000 -Wl,-T,link.ld -Wl,-Map-ntoskrnl.map
  RESFLAGS  += $(DEFINES) $(INCLUDES) 
  LIBS      += 
  LDDEPS    += 
  LINKCMD    = $(CC) -o $(TARGET) $(OBJECTS) $(RESOURCES) $(ARCH) $(LIBS) $(LDFLAGS)
  define PREBUILDCMDS
  endef
  define PRELINKCMDS
  endef
  define POSTBUILDCMDS
  endef
endif

ifeq ($(config),release)
  OBJDIR     = obj/Release
  TARGETDIR  = .
  TARGET     = $(TARGETDIR)/ntoskrnl.exe
  DEFINES   += -D_CRT_SECURE_NO_WARNINGS -DNDEBUG
